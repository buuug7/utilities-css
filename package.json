{
  "name": "utilities-css",
  "version": "3.0.6",
  "description": "simple and easy to use utilities CSS, compatibility with bootstrap utilities.",
  "main": "",
  "style": "dist/utilities-css.css",
  "sass": "src/utilities-css.scss",
  "scripts": {
    "pretty-quick": "pretty-quick",
    "start": "node-sass -w src -o ./dist",
    "build": "node-sass ./src/utilities-css.scss -o ./dist",
    "preversion": "git add .",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "husky": "^2.4.1",
    "pretty-quick": "^1.11.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buuug7/utilities-css.git"
  },
  "keywords": [
    "css",
    "utility",
    "utility css",
    "utilities",
    "utilities css",
    "frontend"
  ],
  "author": "buuug7",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buuug7/utilities-css/issues"
  },
  "homepage": "https://github.com/buuug7/utilities-css#readme"
}
